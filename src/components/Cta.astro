---
export enum CtaVariant {
	Main,
	Sub
}

interface Props {
	href: string;
	variant: CtaVariant;
}

const { href, variant = CtaVariant.Main }: Props = Astro.props;

const vars = {
	[CtaVariant.Main]: {
		padding: "2rem 3rem",
		backgroundColour: "var(--accent)"
	},
	[CtaVariant.Sub]: {
		padding: "1.25rem 1.875rem",
		backgroundColour: "var(--accent-light)"
	}
}[variant];
---

<a {href} target="_blank">
	<slot />
	<img src="/icons/enter.svg" />
</a>

<style define:vars={vars}>
	a {
		display: flex;
		margin: auto;
		padding: var(--padding);
		width: 100%;
		justify-content: center;
		align-items: center;
		gap: 0.5em;
		flex-shrink: 0;

		font-family: var(--font-sans);
		font-size: 1.3rem;
		font-weight: 500;
		text-decoration: none;

		border-radius: var(--br);
		color: var(--white);
		background-color: var(--backgroundColour);
	}

	img {
		height: 1em;
		filter: invert(1);
	}
</style>
