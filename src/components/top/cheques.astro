---
import { faker } from "@faker-js/faker";

import Signature from "./Signature.astro";

const chequeDetails = {
    date: "January 1 1970",
    payee: "Max Speed, Hack Club",
    amount: "$123.45",
    amountWords: "One hundred twenty three and 45/100",
    memo: faker.finance.transactionDescription(),
    routingNumber: faker.finance.routingNumber(),
    accountNumber: faker.finance.accountNumber(),
};
---


<div id="container" class="flex col items-start gap-6 p-5 grow h-fit">
    <div class="flex w-full justify-between">
        <p class="text-xl font-medium">Check deposit</p>
        <p class="an">
            {chequeDetails.date.split("").map((ch) => (
                <span class="letter" style="opacity: 0">{ch.replace(" ", "\u00A0")}</span>
            ))}
        </p>
    </div>

    <div class="flex w-full justify-between border-b border-muted">
        <p class="an">
            {chequeDetails.payee.split("").map((ch) => (
                <span class="letter" style="opacity: 0">{ch.replace(" ", "\u00A0")}</span>
            ))}
        </p>
        <p class="an">
            {chequeDetails.amount.split("").map((ch) => (
                <span class="letter" style="opacity: 0">{ch.replace(" ", "\u00A0")}</span>
            ))}
        </p>
    </div>

    <div class="flex w-full justify-between border-b border-muted">
        <p class="an">
            {chequeDetails.amountWords.split("").map((ch) => (
                <span class="letter" style="opacity: 0">{ch.replace(" ", "\u00A0")}</span>
            ))}
        </p>
        <p>Dollars</p>
    </div>

    <div class="flex col w-full justify-between gap-4">
        <div class="flex w-full justify-between items-end relative">
            <div id="hcb-logo-group" class="flex items-end h-fit">
                <img src="/icons/hcb-simple-green.svg" alt="hcb icon" />
                <p id="hcb-wordmark">HCB</p>
            </div>
            <div class="sig border-b border-muted absolute right-0">
                <Signature />
            </div>
        </div>

        <div class="flex w-full gap-12 text-xs font-micr">
            <p class="an">
                {("T" + chequeDetails.routingNumber + "T").split("").map((ch) => (
                    <span class="letter" style="opacity: 0">{ch.replace(" ", "\u00A0")}</span>
                ))}
            </p>
            <p class="an">
                {chequeDetails.accountNumber.split("").map((ch) => (
                    <span class="letter" style="opacity: 0">{ch.replace(" ", "\u00A0")}</span>
                ))}
            </p>
        </div>
    </div>
</div>

<style>
    #container {
        flex-direction: column;
        justify-content: space-between;
        flex-shrink: 0;

        border-radius: 0.375rem;
        border: 1px solid #E5E5E5;

        background: #FFF;

        backdrop-filter: blur(6px);
    }

    p {
        color: #767676;
        margin: 0;
    }

    #hcb-logo-group {
        & #hcb-wordmark {
            color: var(--text-green);
            font-style: italic;
            font-weight: 500;
        }
    }

    :global(.letter) {
        display: inline-block;
        line-height: 1em;
    }
</style>
